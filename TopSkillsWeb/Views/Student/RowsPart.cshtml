@model IEnumerable<Core.Student>
@{
    bool editAbonement = ViewBag.EditAbonement ??= false;
    bool edit = ViewBag.Edit ??= false;
    bool delete = ViewBag.Delete ??= false;
}


@if (Model != null && Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Age</td>
            <td>@item.Abonement?.RemainingVisits</td>
            @if (editAbonement)
            {
                <td>
                    <a onclick="OnGetModalEditAbonement(@item.StudentId)"><i title="@Resource.Edit @Resource.Abonement" class="ti ti-credit-card"></i>  @* @Resource.Edit *@</a>
                </td>
            }
            @if (edit)
            {
                <td>
                    <a onclick="OnGetModalEdit(@item.StudentId)"><i title="@Resource.Edit" class="ti ti-edit"></i>  @* @Resource.Edit *@</a>
                </td>
            }
            @if (delete)
            {
                <td>
                    <a onclick="OnGetConfrimDelete(@item.StudentId)"> <i title="@Resource.Delete" class="ti ti-trash"></i> @* @Resource.Delete *@</a>
                </td>
            }
        </tr>
    }
}
else
{
    <tr>
        <td colspan="4" class="EmtyResultTd">@Resource.EmptyResult</td>
    </tr>
}