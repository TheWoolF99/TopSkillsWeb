@model IEnumerable<Core.Group>

@{
    bool edit = ViewBag.Edit ??= false;
    bool delete = ViewBag.Delete ??= false;
}

@if (Model != null && Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td class="text-secondary">
                @item.Cource?.Name
            </td>
            <td class="text-secondary">
                @item.Teacher?.FullName
            </td>
            @if (edit)
            {
                <td>
                    <a onclick="OnGetModalEdit(@item.GroupId)"><i title="@Resource.Edit" class="ti ti-edit"></i>  @* @Resource.Edit *@</a>
                </td>
            }
            @if (delete)
            {
                <td>
                    <a onclick="OnGetConfrimDelete(@item.GroupId)"> <i title="@Resource.Delete" class="ti ti-trash"></i> @* @Resource.Delete *@</a>
                </td>
            }
        </tr>
    }
}
else
{
    <tr>
        <td colspan="4" class="EmtyResultTd">@Resource.EmptyResult</td>
    </tr>
}