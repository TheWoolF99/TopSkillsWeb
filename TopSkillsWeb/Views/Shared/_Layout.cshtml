<script type="text/javascript">
    //Переключатель активных вкладок
    $(document).ready(function () {
        $('.nav-item').removeClass('active');
        $(".nav-link").click(function (e) {
            localStorage.setItem('CurrentTab', $(e.currentTarget).parent('.nav-item').prop('id'))
        });
        let nowTab = localStorage.getItem('CurrentTab');
        nowTab ??= 'Home';
        $('#' + nowTab).addClass('active');
        $.ajaxSetup({
            error: function (jqXHR, textStatus, errorThrown, xhr, status, error) {
                if (jqXHR.status == 401) {
                    location.href = '@Url.Action("Login", "Authorization")?returnUrl=' + location.pathname;
                }
                else {
                    if (jqXHR.status == 404) {
                        alert("@Html.Raw(Resource.EmptyResult). 404");
                        $('#loading').hide();
                        $('#modalLoading').hide();
                    } else {
                        if (textStatus != 'abort') {
                            alert("Text: " + textStatus + "\n Error: " + errorThrown + "\n Xhr: " + jqXHR.responseText);
                            $('#loading').hide();
                            $('#modalLoading').hide();
                        }

                    }
                }
            }
        });

        $('input.disablecopypaste').bind('copy paste', function (e) {
            e.preventDefault();
            // myString.replace(/[^\w\s!?]/g, '');
        });

    });

    function containsTextOrNumbers(inputString) {
        if (inputString && inputString.trim() !== "") {
            return true; // строка не пустая
        } else {
            return false; // строка пустая
        }
        // const regex = /^[a-zA-Z0-9\s]*$/; // регулярное выражение, которое проверяет наличие текста или цифр
        // return regex.test(inputString);
    }


    $("html").click(function () {
        $("#contextMenu").css({
            display: "none"
        });
    });

    function CloseModal() {
        $('#modal_body').hide();
        $("#modal_body").removeClass("show");
    }

    function OpenModal() {
        $('#modal_body').show();
        $("#modal_body").addClass("show");
    }

    function AlertSuccess(message) {
        $.get('@Url.Action("ShowModalSuccess", "Home")', { message: message }, function (data) {
            $('#modal_body').html(data);
            OpenModal();
        });

    }

    function getRandomColor() {
        var letters = '0123456789ABCDEF';
        var color = '#';
        for (var i = 0; i < 6; i++) {
            color += letters[Math.floor(Math.random() * 16)];
        }
        return color;
    }

</script>
