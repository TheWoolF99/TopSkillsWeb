    function UpdateCalendarData() {
        let year = c.getCurrentYear();
        let mounth = c.getCurrentMonth();
        $('.loadingCalendar').show();
        $.get('@Url.Action("GetCalendarData", "Attendance")', { CurrentYear: year, CurrentMounth: (mounth+1) }, function (data) {
            if (typeof data === 'string') {
                data = JSON.parse(data);
            }
            
            FilCalendarData(data);
        });
    }


    function FilCalendarData(data){
        $('.TaskList').html('');
        data.forEach((e) => {
            let dt = new Date(e.DateVisiting);
            let mounth = dt.getMonth();
            let day = dt.getDate();
            console.log(dt, 'background: #222; color: #bada55');
            console.log(mounth, 'background: #222; color: #bada55');
            console.log(day, 'background: #222; color: #bada55');
            let color = e.Group.Color;
            color ??= getRandomColor();
            let passed = e.DateClose != null ? "passed" : "";
            let html = '<div class="taskElement ' + passed + '" oncontextmenu="OnGetContextMenuTask(' + e.Group.GroupId + ',\'' + dt.format() + '\', event); return false;"   onclick="OnGetModalEditTask(' + e.AttendanceId + ')" style="background-color: ' + color + '70">';
            html += '<span class="taskName">' + e.Group.Name + '</span>'
            html +='</div>'
            $('#TaskLst-' + (mounth+1) + '-' + day).append(html);
        })
        console.log(data);
        $('.loadingCalendar').hide();
    }

    function OnGetModalAddAttendance(date){
        $.get('@Url.Action("GetModalAddAttendance", "Attendance")', { date: date }, function (data) {
            $('#modal_body').html(data);
            OpenModal();
        });
    }

    function OnGetModalEditTask(id) {
        console.log(id);
    }

    function OnGetContextMenuTask(groupId, date, e){
        $.get('@Url.Action("ShowContextMenu", "Attendance")', { groupId: groupId, date: date }, function (data) {
            document.getElementById("contextMenu").innerHTML = data;
        });
        $("#contextMenu").css({
            display: "block",
            left: e.pageX,
            top: e.pageY
        });
        return false;
    }


    function OnGetEditAttendance(groupId, date) {
        $.get('@Url.Action("OnEditAttendance", "Attendance")', { groupId: groupId, date: date }, function (data) {
            $('#modal_body').html(data);
            OpenModal();
        });
    }

    function OnGetConfrimDeleteAttendance(groupId, date) {
        groupIdForDelete = groupId;
        dateForDelete = date;

        $.get('@Url.Action("ConfirmDeleteAttendance", "Attendance")', { groupId: groupId, date: date }, function (data) {
            $('#modal_body').html(data);
            OpenModal();
        });
    }


    //Fix jn document.ready
    // Get element by id
    function getId(id) {
        return document.getElementById(id);
    }
</script>
